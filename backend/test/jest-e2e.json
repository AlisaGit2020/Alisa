{
  "moduleDirectories": ["node_modules", "test", "backend"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e.spec.ts$",
  "moduleNameMapper": {        
    "^@alisa-backend/(.*)": "<rootDir>../../backend/src/$1"    
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/jest.setup.ts"]
}
