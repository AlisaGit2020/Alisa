{
  "moduleDirectories": ["node_modules", "backend"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".service-spec.ts$",
  "moduleNameMapper": {        
    "^@alisa-backend/(.*)": "<rootDir>../backend/src/$1"    
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": ["<rootDir>/test/jest.setup.ts"]
}
