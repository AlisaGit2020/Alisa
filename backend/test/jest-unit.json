{
  "moduleDirectories": ["node_modules", "backend"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": "\\.(service|dto|transformer)\\.spec\\.ts$",
  "testPathIgnorePatterns": [
    "op-import\\.service-spec\\.ts$"
  ],
  "moduleNameMapper": {
    "^@alisa-backend/(.*)": "<rootDir>src/$1",
    "^src/(.*)": "<rootDir>src/$1",
    "^test/(.*)": "<rootDir>test/$1"
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  }
}
