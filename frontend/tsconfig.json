{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "esnext",
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@asset-lib/*": ["src/lib/*"],
      "@asset-types": ["src/types/index.ts"],
      "@asset-types/*": ["src/types/*"],
      "@asset-mocks/*": ["test/mocks/*"],
      "@test-utils": ["test/utils/index.ts"],
      "@test-utils/*": ["test/utils/*"],
      // Backend path alias - used for importing shared types (enums, DTOs) in tests.
      // Jest config has matching mapping. Do not import Node.js-specific code.
      "@asset-backend/*": ["../backend/src/*"]
    }
  },
  "include": ["src"],  
}
